{
  "name": "react-app",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "tsc --noEmit && esbuild src/app.tsx --target=es2018 --bundle --minify --outfile=public/js/app.js",
    "dev": "tsc --noEmit --watch & esbuild src/app.tsx --target=es2018 --bundle --sourcemap --outfile=public/js/app.js --watch --serve=8001 --servedir=public"
  },
  "devDependencies": {
    "@types/react": "^18.2.12",
    "@types/react-dom": "^18.2.5"
  },
  "dependencies": {
    "@esbuild-ts-monorepo/react-lib": "*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
