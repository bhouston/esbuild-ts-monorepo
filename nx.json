{
  "affected": {
    "defaultBase": "main"
  },
  "parallel": 4,
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build"]
      }
    }
  },
  "sourceRoot": "{projectRoot}/src",
  "projectType": "package",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "!{projectRoot}/dist/**/*"]
  },
  "targetDefaults": {
    "dev": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"],
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["tsc --watch"],
        "parallel": true
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"],
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["tsc"]
      },
      "cache": true
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["tsc --noEmit"],
        "parallel": true
      }
    },
    "lint:check": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["eslint \"{app,src}/**/*.{ts,tsx}\""]
      },
      "cache": false
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["eslint --fix \"{app,src}/**/*.{ts,tsx}\""]
      },
      "cache": true
    },
    "format": {
      "executor": "nx:run-commands",
      "inputs": ["default"],
      "options": {
        "cwd": "{projectRoot}",
        "command": "prettier \"src/**/*.{js,jsx,css,md,html,ts,tsx,json,yaml}\" --check"
      },
      "cache": true
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": ["build", "typecheck"],
      "inputs": ["default"],
      "outputs": [],
      "options": {
        "cwd": "{projectRoot}",
        "command": "node --test --no-warnings --experimental-strip-types --experimental-transform-types './src/**/*.test.ts'"
      },
      "cache": true
    }
  }
}
