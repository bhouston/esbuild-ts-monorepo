{
  "affected": {
    "defaultBase": "main"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build"]
      }
    }
  },
  "sourceRoot": "{projectRoot}/src",
  "projectType": "package",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "!{projectRoot}/dist/**/*"]
  },
  "targetDefaults": {
    "watch": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"],
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["bunx --bun tsc --watch"],
        "parallel": true
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"],
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["bunx --bun tsc"]
      },
      "cache": true
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "{projectRoot}/src/**/*.{js,jsx,ts,tsx,json,yaml}"
        ],
        "eslintConfig": ".eslintrc",
        "fix": true
      },
      "cache": true
    },
    "format": {
      "executor": "nx:run-commands",
      "inputs": ["default"],
      "options": {
        "cwd": "{projectRoot}",
        "command": "bunx prettier \"src/**/*.{js,jsx,css,md,html,ts,tsx,json,yaml}\" --check"
      },
      "cache": true
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "inputs": ["default"],
      "outputs": [],
      "options": {
        "cwd": "{projectRoot}",
        "command": "bun --experimental-vm-modules --no-warnings ../../node_modules/jest/bin/jest.js"
      },
      "cache": true
    }
  }
}
