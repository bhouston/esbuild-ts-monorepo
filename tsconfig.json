{
  "compilerOptions": {
    "paths": {
      "@esbuild-ts-monorepo/vanilla-lib": ["./packages/vanilla-lib/"],
      "@esbuild-ts-monorepo/react-lib": ["./packages/react-lib/"]
    },
    "outDir": "dist",
    "target": "ES2018",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es2020", "dom"],
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true
  }
}
